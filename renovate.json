{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff",
    ":disableDependencyDashboard"
  ],
  "ignorePaths": [
    "tests/golden/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [{
    "matchUpdateTypes": ["patch"],
    "matchCurrentVersion": "!/^0/",
    "automerge": true
  }]
}
